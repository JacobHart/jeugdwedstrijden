<h1>New Admin</h1>


<%= form_tag(admins_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

    <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

      <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password_confirmation %>
  </div>


  <div>
    <%= submit_tag "Create Admin" %>
  </div>
<% end %>
