<% if @club %>
  <% if @club.errors.any? %>
    <ul>
      <% @club.errors.full_messages do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<table class="table table-striped">
  <thead>
    <th><h1>New Club</h1></th>
  </thead>
  <tbody>
    <tr>
      <td rowspan="3">
        <%= form_tag(clubs_url, method: 'post') do %>
        <%= text_field_tag :name %>
        <%= submit_tag "Create Club" , :class => "btn btn-success" %>
        <% end %>
      </td>
      <% @clubs.each do |club| %>
        <td>
          <%= club.name %>
      <% end %>
    </tr>
    <tr>
      <% @clubs.each do |club| %>
        <td>
          <%= link_to 'Edit', edit_club_url(club), :class => "btn btn-warning"  %>
        </td>
      <% end %>
    </tr>
    <tr>
      <% @clubs.each do |club| %>
        <td>
          <%= link_to 'Destroy', club_url(club), method: 'delete', data: { confirm: "Do you really want to delete this club?" }, :class => "btn btn-danger" %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>






