<div class="page-header">
  <h1>@rower.name <small>who are you?</small></h1>
</div>

<%= form_tag(rower_url(@rower), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @rower.name %>
  </div>

  <div>
    <%= label_tag :age %><br />
    <%= text_field_tag :age, @rower.age %>
  </div>

  <div>
    <%= label_tag :club_id %><br />
    <%= select_tag :club_id, options_from_collection_for_select(Club.all, :id, :name, @rower.club_id) %>
  </div>


  <div>
    <%= submit_tag "Update Rower" %>
  </div>

<% end %>
