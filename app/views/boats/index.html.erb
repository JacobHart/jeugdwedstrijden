<div class="page-header">
  <h1>Boats <small>where do you race in?</small></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <% @heats.each do |heat| %>
      <th><%=heat.name%></th>
      <% end %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= boat.name %></td>
        <% @heats.each do |heat| %>
          <% if boat.team_classifications.where(heat_id: heat.id).count >= 2  %>
          <td style="background-color:red">
          <% else %>
          <td>
          <% end %>
            <% boat.team_classifications.where(heat_id: heat.id).each do |team_classification| %>
            <%= team_classification.team.name %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

