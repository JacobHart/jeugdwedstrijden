<h1><%= @club.name %></h1>

<div class="row">
  <div class="span7">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Heats</th>
          <th>Teams</th>
          <th colspan="4">Rowers</th>
        </tr>
      </thead>
      <tbody>

        <% @club.teams.each do |team| %>
          <tr>
            <td><% team.heats.each do |heat| %>
              <%= link_to heat.name, heat_url(heat) %>
            <% end %></td>
            <td><%= link_to team.name, team_url(team) %></td>
            <td>
              <% team.rowers.each do |rower| %>
                <%= rower.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="span5">

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Club</th>
        <th>First Team</th>
        <th>Second Team</th>
        <th>Third Team</th>
      </tr>
    </thead>

    <tbody>
    <% @club.rowers.each_with_index do |rower, index| %>
      <tr>
        <td><%= rower.name %></td>
        <td><%= rower.age %></td>
        <td><%= link_to rower.club.name, team_url(rower.club) %></td>
        <% if rower.teams[0].present? %>
        <td><%= link_to rower.teams[0].name, team_url(rower.teams[0]) %></td>
        <% else %>
        <td></td>
        <%end%>
        <% if rower.teams[1].present? %>
        <td><%= link_to rower.teams[1].name, team_url(rower.teams[1]) %></td>
        <% else %>
        <td></td>
        <%end%>
        <% if rower.teams[2].present? %>
        <td><%= link_to rower.teams[2].name, team_url(rower.teams[2]) %></td>
        <% else %>
        <td></td>
        <%end%>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>
