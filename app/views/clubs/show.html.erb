<h1><%= @club.name %></h1>

<div class="row">
  <div class="span7">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Heats</th>
          <th>Teams</th>
          <th colspan="4">Rowers</th>
        </tr>
      </thead>
      <tbody>

        <% @club.teams.each do |team| %>
          <tr>
            <td><% team.heats.each do |heat| %>
              <%= link_to heat.name, heat_url(heat) %>
            <% end %></td>
            <td><%= link_to team.name, team_url(team) %></td>
            <td>
              <% team.rowers.each do |rower| %>
                <%= rower.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="span5">

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Number</th>
        <th>Name</th>
        <th>Details</th>
      </tr>
    </thead>

    <tbody>
    <% @club.rowers.each_with_index do |rower, index| %>
      <tr>
        <td><%= index +1 %>
        <td><%= rower.name %></td>
        <td><%= link_to 'Details', rower_url(rower) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>
